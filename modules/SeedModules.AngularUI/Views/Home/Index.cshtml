@using SeedModules.AngularUI.Extensions;
@model SeedModules.AngularUI.Models.ViewOptionsModel;
<!DOCTYPE html>
<!--[if lte IE 8]><html lang="zh-cn" data-html-type="no-js lte-ie8"><![endif]-->
<!--[if gt IE 8]><!-->
<html lang="zh-cn" data-html-type="no-js">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title></title>

    <link rel="stylesheet" href="SeedModules.AngularUI/css/bootstrap.min.css" />
    <link rel="stylesheet" href="SeedModules.AngularUI/css/bootstrap-theme.min.css" />
    <style>
        .view-loading {
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            background-image: url('SeedModules.AngularUI/img/loading.gif');
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
    @foreach (var script in Model.Scripts)
    {
        <script src="@script"></script>
    }
    @Html.AngularUI("SeedModules.AngularUI/js/seed/require.min.js", "SeedModules.AngularUI/startup.js").Options(Model.Options).Settings(Model.SiteSettings).Properties(Model.Properties)
</head>
<body ui-view>
    <div class="view-loading"></div>
</body>
</html>