@{
    Layout = "/SeedModules.AngularUI/Views/_Layout.cshtml";
    ViewBag.Title = "安装系统";
    ViewBag.UIOptions = new
    {
        version = "1.0",
        references = new Dictionary<string, object>()
        {
            {
                "seedmodules/setup",
                new
                {
                    path = "/SeedModules.Setup/js/setup"
                }
            }
        },
        requires = new string[] { "seedmodules/setup" },
        noDebugs = new string[] { "seedmodules/setup" }
    };
}
<div class="container" ng-controller="seedmodules.setup as me">
    <div class="jumbotron">
        <h1>安装系统</h1>
        <p>就是需要先安装一下</p>
    </div>
    <form name="form" role="form">
        <h6><i class="glyphicon glyphicon-chevron-right"></i> 基本信息</h6>
        <div class="row">
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.Purpose.$invalid }">
                <div>
                    <label>功能：</label>
                    <span class="text-danger pull-right" ng-show="form.Purpose.$invalid">*必须选择功能</span>
                </div>
                <div>
                    <select class="form-control" name="Purpose" ng-model="data.Purpose" ng-options="item.Id as item.Name for item in me.purposes" required></select>
                </div>
            </fieldset>
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.Name.$invalid }">
                <div>
                    <label>名称：</label>
                    <span class="text-danger pull-right" ng-show="form.Name.$invalid">*名称是必填的</span>
                </div>
                <div>
                    <input class="form-control" placeholder="输入名称" name="Name" ng-model="data.Name" required />
                </div>
            </fieldset>
        </div>
        <h6><i class="glyphicon glyphicon-chevron-right"></i> 数据库信息</h6>
        <div class="row">
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.DatabaseProvider.$invalid }">
                <div>
                    <label>数据库类型：</label>
                    <span class="text-danger pull-right" ng-show="form.DatabaseProvider.$invalid">*必须选择数据库类型</span>
                </div>
                <div>
                    <select class="form-control" name="DatabaseProvider" ng-model="data.DatabaseProvider" ng-options="item.Provider as item.Name for item in me.databaseProviders" required></select>
                </div>
            </fieldset>
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.TablePrefix.$invalid }">
                <div>
                    <label>表前缀：</label>
                </div>
                <div>
                    <input class="form-control" placeholder="输入表前缀" name="TablePrefix" ng-model="data.TablePrefix" />
                </div>
            </fieldset>
            <fieldset class="form-group col-md-12" ng-class="{ 'has-error': form.ConnectionString.$invalid }">
                <div>
                    <label>连接字符串：</label>
                    <span class="text-danger pull-right" ng-show="form.ConnectionString.$invalid">*必须输入连接字符串</span>
                </div>
                <div>
                    <input class="form-control" placeholder="输入连接字符串" name="ConnectionString" ng-model="data.ConnectionString" required />
                </div>
            </fieldset>
        </div>
        <h6><i class="glyphicon glyphicon-chevron-right"></i> 用户信息</h6>
        <div class="row">
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.UserName.$invalid }">
                <div>
                    <label>用户名：</label>
                    <span class="text-danger pull-right" ng-show="form.UserName.$invalid">*必须输入用户名</span>
                </div>
                <div>
                    <input class="form-control" placeholder="输入用户名" name="UserName" ng-model="data.UserName" required />
                </div>
            </fieldset>
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.Email.$invalid }">
                <div>
                    <label>邮箱：</label>
                    <span class="text-danger pull-right" ng-show="form.Email.$invalid">*必须输入用户名</span>
                </div>
                <div>
                    <input class="form-control" placeholder="输入邮箱" type="email" name="Email" ng-model="data.Email" required />
                </div>
            </fieldset>
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.Password.$invalid }">
                <div>
                    <label>密码：</label>
                    <span class="text-danger pull-right" ng-show="form.Password.$invalid">*必须输入密码</span>
                </div>
                <div>
                    <input type="password" class="form-control" placeholder="输入密码" name="Password" ng-model="data.Password" required />
                </div>
            </fieldset>
            <fieldset class="form-group col-md-6" ng-class="{ 'has-error': form.PasswordConfirmation.$invalid }">
                <div>
                    <label>确认密码：</label>
                    <span class="text-danger pull-right" ng-show="form.PasswordConfirmation.$invalid">*确认密码有误</span>
                </div>
                <div>
                    <input type="password" class="form-control" placeholder="输入密码" name="PasswordConfirmation" ng-model="data.PasswordConfirmation" equals="data.Password" required />
                </div>
            </fieldset>
        </div>
        <div class="text-right">
            <button type="reset" class="btn btn-default">重置</button>
            <button type="button" class="btn btn-primary" ng-click="install()" ng-disabled="form.$invalid">开始安装</button>
        </div>
    </form>
</div>